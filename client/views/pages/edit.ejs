<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <form action="/employees/<%=employee._id  %>?_method=PATCH" method="POST">
        <label for="firstName">Firstname: </label>
        <input type="text" name="employee[firstName]" id="firstName"  value="<%= employee.firstName%>">

        <br>

        <label for="lastName">LastName: </label>
        <input type="text" name="employee[lastName]" id="lastName" value="<%= employee.lastName%>">

        <br>
        
        <label for="age">Age: </label>
        <input type="number" name="employee[age]" id="employee[age]" value="<%= employee.age%>">

        <br>
        
        <label for="street">St. Address: </label>
        <input type="text" name="employee[street]" id="street" value="<%=employee.street %>">
        <br>
        
        <label for="barangay">Barangay: </label>
        <input type="text" name="employee[barangay]" id="barangay" value="<%=employee.barangay  %>">
        
        <br>
        
        <label for="city">City: </label>
        <input type="text" name="employee[city]" id="city" value="<%=employee.city  %>">
        <br>
        
        <label for="province">Province: </label>
        <input type="text" name="employee[province]" id="province" value="<%=employee.province  %>">
        <br>
        
        <label for="postalCode">Zip/Postal Coded: </label>
        <input type="number" name="employee[postalCode]" id="postalCode" value="<%=employee.postalCode  %>">
        <br>
        
        <label for="phoneNumber">Phone Number: </label>
        <input type="number" name="employee[phoneNumber]" id="phoneNumber" value="<%=employee.phoneNumber  %>">
        <br>
        
        <label for="phoneNumber2">Phone Number 2: </label>
        <input type="number" name="employee[phoneNumber2]" id="phoneNumber2" value="<%=employee.phoneNumber2  %>">
        <br>
        
        <label for="emergContactPer">Emergency Contact Person: </label>
        <input type="text" name="employee[emergContactPer]" id="emergContactPer" value="<%=employee.emergContactPer  %>">
        <br>
        
        <label for="contactNumber">Contact Number: </label>
        <input type="number" name="employee[contactNumber]" id="contactNumber" value="<%=employee.contactNumber  %>">

        <br>
        
        <label for="employeeId">Employee ID: </label>
        <input type="text" name="employee[employeeId]" id="employeeId" value="<%=employee.employeeId  %>">

        <br>
        
        <label for="email">Email: </label>
        <input type="email" name="employee[email]" id="email" value="<%= employee.email%>">
        <br>
        

         
        <label for="office">office: </label>
        <select name="employee[office]" id="office">
            <% for (let office of offices) { %>
                <option value="<%=office.office  %>" <%=employee.office === office.office? 'selected':''%>><%=office.office  %></option>
            <% } %>
        </select>
        <br>
        
        <label for="position">position: </label>
        <select name="employee[position]" id="position">
            <% for (let position of positions) { %>
                <option value="<%=position  %>" <%=employee.position === position? 'selected':''%>><%=position  %></option>
            <% } %>
        </select>
        <br>
        
        <label for="sssId">SSS ID: </label>
        <input type="text" name="employee[sssId]" id="sssId" value="<%= employee.sssId%>">
        <br>
        
        <label for="gsisId">GSIS ID: </label>
        <input type="text" name="employee[gsisId]" id="gsisId" value="<%= employee.gsisId%>">
        <br>
        
        <label for="philHealthId">Phil Health ID: </label>
        <input type="text" name="employee[philHealthId]" id="philHealthId" value="<%= employee.philHealthId%>">

        <br>
        
        <label for="pagibigId">Pag-ibig ID: </label>
        <input type="text" name="employee[pagibigId]" id="pagibigId" value="<%= employee.pagibigId%>">

        <br>

        <label for="tinId">TIN ID: </label>
        <input type="text" name="employee[tinId]" id="tinId" value="<%= employee.tinId%>">

        <br>
        
        <label for="designation">Designation: </label>
        <select name="employee[designation]" id="designation">
         <% for (let designation of designations) { %>
                <option value="<%=designation  %>" <%=employee.designation === designation? 'selected':''  %>><%=designation %></option>
            <% } %>
        </select>

        <br>
        <label for="dateStart"></label>
        <input type="date" name="employee[dateStart]" id="dateStart" value="<%=employee.dateStart %>">
        
    <button>Submit</button>
    </form>

<a href="/employees">All employees</a>
    
</body>
</html>